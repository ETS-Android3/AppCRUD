<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.jesusdc99.crudproject">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".views.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_custom"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.AyudaActivity"
            android:label="@string/title_activity_ayuda"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".views.BuscarActivity"
            android:label="@string/title_activity_buscar"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.FormularioActivity"
            android:label="@string/title_activity_formulario"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- https://youtu.be/FcPUFp8Qrps -->
        <activity
            android:name=".views.ListadoActivity"
            android:label="@string/title_activity_listado"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>