<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.jesusdc99.crudproject">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/ic_database"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_database"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.FormularioActivity"
            android:label="@string/title_activity_formulario"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".views.ListadoActivity" /> <!-- https://youtu.be/FcPUFp8Qrps -->
        <activity
            android:name=".views.ListadoActivity"
            android:label="@string/title_activity_listado"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>